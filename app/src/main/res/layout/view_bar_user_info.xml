<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:padding="@dimen/spacing_normal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="@dimen/user_head_circle_size"
        android:layout_height="@dimen/user_head_circle_size"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_image_user"
        android:layout_toStartOf="@+id/btn_image_user_chevron_right"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingRight="@dimen/spacing_normal"
        tools:text="由"/>

    <TextView
        android:id="@+id/tv_image_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_user_avatar"
        android:layout_toEndOf="@+id/iv_user_avatar"
        android:paddingLeft="@dimen/spacing_normal"
        android:paddingRight="@dimen/spacing_normal"
        tools:text="用户名" />

    <ImageButton
        android:id="@+id/btn_image_user_chevron_right"
        android:layout_width="@dimen/user_head_circle_size"
        android:layout_height="@dimen/user_head_circle_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent" />
</RelativeLayout>